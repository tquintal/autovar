<UserControl x:Class="Autovar.UserControlDefinicoes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autovar"
             mc:Ignorable="d">

    <Grid Height="720" Width="1280">

        <Grid.Background>
            <ImageBrush ImageSource="../Images/img.png"/>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="Bold">Opção 1</TextBlock>

        <Button Width="150" Background="#FFA2A2A2" BorderBrush="{x:Null}" Foreground="White" Content="OPÇÃO 1" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="Bold">Opção 2</TextBlock>

        <Button Width="150" Background="#FFA2A2A2" BorderBrush="{x:Null}" Foreground="White" Content="OPÇÃO 2" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="Bold">Limpar todos os dados e recomeçar</TextBlock>
        
        <Button Width="150" Background="#FFB80000" BorderBrush="{x:Null}" Foreground="#DDFFFFFF" Click="BotaoLimpar_Click" Content="LIMPAR" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left"/>

    </Grid>
    
</UserControl>
