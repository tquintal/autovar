<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfTestApp.Dictionary">

    <DataTemplate x:Key="automovelTemplate">
        <Border Margin="5"
                BorderThickness="2 2 5 5"
                CornerRadius="5"
                BorderBrush="DarkGray">
            <StackPanel Margin="3" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Código:" FontStyle="Italic"></TextBlock>
                    <TextBlock Text="{Binding IdAutomovel}"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nome:" FontWeight="Bold"></TextBlock>
                    <TextBlock Text="{Binding IdUtilizador}"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </DataTemplate>
    
</ResourceDictionary>